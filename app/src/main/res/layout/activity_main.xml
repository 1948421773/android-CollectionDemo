<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="waphack.com.CollectionDemo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#3F51B5">

        <ImageView
            android:id="@+id/side_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_format_align_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="首页"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="13838705888"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="get查询"
            android:textAllCaps="false"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="RecyclerView+swipeRefrashlayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_tfl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="TagFlowLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_retrofit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="okhttp+Retrofit"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_glide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Glide和Picasso"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bt_cardview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CardView上传图片"
            android:textAllCaps="false" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:dividerHeight="100dp" />

</LinearLayout>
